			<div class="request-password-reset">
				<h1></h1>
		
				<%= devise_error_messages!  %>
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
					<div class="error"></div>
						<h1>Changing your password is simple</h1>
						<p><label for="email" >Please enter your email address to get instructions.</label></p>
					
					<div class="fieldgroup">
						<p>
							<span class="error" id="email-error"></span>

							<%= f.text_field :email ,:id => "email"  %>

						</p>
					</div>
			
					<p class="actions">	
						<%= f.submit "Send password reset", :class => "btn-primary" , :id => "request"  %>
					</p>
				<%end%>
			</div>
		</div>
